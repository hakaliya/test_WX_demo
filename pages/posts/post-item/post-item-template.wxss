.posts_container {
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.posts_author {
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx; */
  margin: 10rpx 0rpx 20prx 30rpx;
   display: flex;
  flex-direction: row;
  align-items: center;
  
}

.posts_author_avatar {
  height: 60rpx;
  width: 60px;
  vertical-align: middle;
}
.posts_author_data {
  font-size: 26rpx;
  margin-left: 20rpx;

}
.posts_title {

  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333;
  
}
.posts_image {
  width: 100%;
  height: 420rpx;
  margin-bottom: 15px;

}
.posts_content {
  color: #666;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.posts_number {

  margin-right: 40px;
}
.like {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.posts_like {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}


