.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
  /* display: flex;
  flex-direction: row;
  /* 左右两端分布 
  justify-content: space-between;  */
  /* 将一个容器变成盒子模型以后， vertical-align不能再使用*/
}

.slogan {
  font-size: 24rpx;
}

.more {
  float: right;
}

.more-text {
  /* more-text 和 more-img 的vertical-align: middle 是为了是文本和图片对齐 */
  vertical-align: middle;
  /* 变成了盒子模型，vertical-align失效 */
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  /* 变成了盒子模型，vertical-align失效 */
  vertical-align: middle;
}

.movies-container {
  display: flex;
  flex-direction: row;
}

.inner-container {
  margin: 0 auto 20rpx;
}
